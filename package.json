{
  "private": true,
  "devDependencies": {
    "babel-core": "^6.14.0",
    "babel-loader": "^6.2.5",
    "babel-plugin-istanbul": "^2.0.1",
    "babel-plugin-module-resolver": "^2.2.0",
    "babel-plugin-resolve-bower-module": "^1.0.6",
    "babel-preset-es2015": "^6.14.0",
    "babel-preset-power-assert": "^1.0.0",
    "babel-preset-react": "^6.11.1",
    "bower": "^1.7.9",
    "copy-webpack-plugin": "^3.0.1",
    "cross-env": "^2.0.1",
    "css-loader": "^0.25.0",
    "eslint": "^3.5.0",
    "eslint-import-resolver-webpack": "^0.5.1",
    "eslint-plugin-import": "^1.14.0",
    "eslint-plugin-react": "^6.2.1",
    "extract-text-webpack-plugin": "^1.0.1",
    "jsdom": "^9.5.0",
    "json-loader": "^0.5.4",
    "karma": "^1.3.0",
    "karma-coverage": "^1.1.1",
    "karma-mocha": "^1.1.1",
    "karma-phantomjs-launcher": "^1.0.2",
    "karma-webpack": "^1.8.0",
    "lodash": "^4.15.0",
    "mocha": "^3.0.2",
    "mocha-jsdom": "^1.1.0",
    "moment": "^2.15.0",
    "node-sass": "^3.9.3",
    "nyc": "^8.1.0",
    "phantomjs-prebuilt": "^2.1.12",
    "plato": "^1.7.0",
    "power-assert": "^1.4.1",
    "react": "^15.3.1",
    "react-dom": "^15.3.1",
    "rimraf": "^2.5.4",
    "sass-loader": "^4.0.2",
    "style-loader": "^0.13.1",
    "webpack": "^1.13.2",
    "webpack-dev-server": "^1.15.1"
  },
  "scripts": {
    "//": "npm install時に自動的にbower installを実行するため。bowerを使わない場合は不要",
    "postinstall": "bower install",
    "build": "cross-env NODE_ENV=production webpack",
    "start": "cross-env NODE_ENV=debug webpack-dev-server",
    "test": "cross-env NODE_ENV=test mocha --opts ./mocha.opts",
    "test-cov": "cross-env NODE_ENV=test nyc mocha --opts ./mocha.opts",
    "karma": "cross-env NODE_ENV=test karma start",
    "lint": "cross-env DEBUG=eslint:cli-engine eslint src",
    "metrics": "plato -r -d report src",
    "clean": "rimraf .nyc_output dist coverage report",
    "cleanall": "rimraf node_modules bower_components",
    "precleanall": "npm run clean"
  },
  "nyc": {
    "//": "babel-plugin-istanbulでinstrumentを埋め込むのでnyc側は無効にする",
    "instrument": false,
    "sourceMap": false,
    "reporter": [
      "lcov",
      "text",
      "html"
    ]
  }
}
